@inherits BaseComponent

<div class="ant-input-affix-wrapper" style="padding:0;">
    <textarea id="@Id" name="@Id" class="ant-input" @attributes="InputAttributes">@Value</textarea>
</div>

@code {
    [Parameter] public bool Required { get; set; }
    [Parameter] public string Value { get; set; }
    [Parameter] public string Placeholder { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        InputAttributes.Clear();
        InputAttributes.AddItem("aria-required", Required);
        InputAttributes.AddItem("placeholder", Placeholder);
    }
}