@inherits BaseComponent
@inject AppService AppService

<div class="fluent-container fluent-widget friend-links" data-aos="fade-up">
    <div class="d-flex flex-wrap align-items-center">
        <span class="fluent-title-small mr-3">友情链接: </span>
        @if (_links?.Any() != true)
        {
            <AntEmpty/>
        }
        else
        {
            <!-- 调整链接容器样式 -->
            <div class="fluent-links-container p-3 rounded bg-light">
                @foreach (var link in _links)
                {
                    <!-- 添加悬停效果 -->
                    <a href="@link.Link" target="_blank" title="@link.Description" class="fluent-link mr-3 mb-2 hover-effect">@link.Title</a>
                }
            </div>
        }
    </div>
</div>

<!-- 添加自定义样式 -->
<style>
    .hover-effect {
        color: #007bff;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .hover-effect:hover {
        color: #0056b3;
        text-decoration: underline;
        transform: translateY(-2px);
    }
</style>

@code {
    private List<FriendLinkItem>? _links;

    protected override async Task OnInitAsync()
    {
        await base.OnInitAsync();

        _links = await AppService.GetAllFriendLinkItemsAsync();
    }
}