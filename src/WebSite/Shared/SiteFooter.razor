    }

    .footer .desc {
        margin-top: 1rem;
        opacity: 0.8;
        font-size: 0.9rem;
    }

    .footer h5 {
        color: #4a9eff;
        font-weight: 600;
        font-size: 1.1rem;
        text-shadow: 0 0 10px rgba(74, 158, 255, 0.3);
    }

    .footer ul li {
        margin: 0.5rem 0;
    }

    .footer ul li i {
        color: #4a9eff;
        font-size: 0.8rem;
        margin-right: 0.5rem;
        transition: transform 0.3s ease;
    }

    .footer ul li a {
        color: rgba(255, 255, 255, 0.7);
        text-decoration: none;
        transition: all 0.3s ease;
        font-size: 0.9rem;
    }

    .footer ul li:hover i {
        transform: translateX(3px);
    }

    .footer ul li:hover a {
        color: #fff;
        text-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
    }

    .footer .qrcode {
        background: rgba(255, 255, 255, 0.1);
        padding: 1rem;
        border-radius: 10px;
        text-align: center;
        transition: all 0.3s ease;
    }

    .footer .qrcode:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

    .footer .copyright {
        margin-top: 2rem;
        padding-top: 1rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        text-align: center;
        font-size: 0.9rem;
    }

    .footer .copyright a {
        color: rgba(255, 255, 255, 0.7);
        text-decoration: none;
        margin-left: 1rem;
        transition: color 0.3s ease;
    }

    .footer .copyright a:hover {
        color: #4a9eff;
    }
</style>